{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Prénom</label>
            {{ form_row(registrationForm.firstname,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Nom</label>
            {{ form_row(registrationForm.lastname,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            {{ form_row(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Numéro de téléphone</label>
            {{ form_row(registrationForm.phone_number,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label"></label>
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>



        {# {{ form_row(registrationForm.agreeTerms) }} #}

        <button type="submit" class="btn btn-primary">Inscription</button>
    {{ form_end(registrationForm) }}

{% endblock %}
