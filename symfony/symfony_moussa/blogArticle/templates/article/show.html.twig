{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ article.title }}</td>
			</tr>
			<tr>
				<th>Resume</th>
				<td>{{ article.resume }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ article.content }}</td>
			</tr>
			<tr>
				<th>Auteur</th>
				<td>{{ article.auteur }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ asset('images/articles/') }}{{ article.image }}" alt=""></td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_article_index') }}">back to list</a>

	<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

	{{ include('article/_delete_form.html.twig') }}

	{% if app.user %}
		{{ include('commentaire/_form.html.twig') }}
	{% endif %}

	{% for commentaire in commentaires %}
		<p>Post√© par
			<span style="font-style:italic; font-weight: bold;">{{ commentaire.user }}</span>
			le
			{{ commentaire.createdAt|date('d/m/Y')}}</p>

		<p>{{ commentaire.contenu }}</p>
	{% else %}
		<p>Aucun commentaire pour cet article</p>
	{% endfor %}

{% endblock %}
